{
  "name": "@code-essentials/eslint-config",
  "version": "1.0.0",
  "description": "eslint configuration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild:prod": "npm run clean",
    "prebuild:debug": "npm run clean",
    "build:prod": "tsc  -p tsconfig.prod.json",
    "build:debug": "tsc -p tsconfig.debug.json",
    "build": "npm run build:prod",
    "postbuild": "npm run lint:run",
    "pretest": "npm run build:prod",
    "test": "npm run test:run",
    "pretest:run": "",
    "test:run": "npm run lint:run",
    "prelint": "npm run build:prod",
    "lint": "npm run lint:run",
    "lint:run": "eslint .",
    "prepublishOnly": "npm test && npm run build"
  },
  "dependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "devDependencies": {
    "@code-essentials/tsconfig": "^1.2.6",
    "@tsconfig/node24": "^24.0.3",
    "@tsconfig/strictest": "^2.0.8",
    "@types/node": "^24.10.1"
  },
  "author": {
    "name": "Isaac Valdez",
    "email": "isaac_valdez@msn.com",
    "url": "https://i12345.github.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/code-essentials/eslint-config.git"
  },
  "license": "MIT"
}
